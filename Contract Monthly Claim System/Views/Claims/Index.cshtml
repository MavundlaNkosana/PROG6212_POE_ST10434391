@using Contract_Monthly_Claim_System.Helpers
@model IEnumerable<Contract_Monthly_Claim_System.Models.Claim>

@{
    ViewData["Title"] = "My Claims";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">My Claims Dashboard</h2>
        <a asp-action="Create" class="btn btn-primary">Create New Claim</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Claim Period</th>
                        <th>Submitted On</th>
                        <th class="text-right">Total Amount</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.Month/@claim.Year</td>
                            <td>@(claim.SubmittedAt.HasValue? claim.SubmittedAt.Value.ToString("yyyy-MM-dd") : "Not submitted")</td>
                            <td class="text-right font-weight-bold">@claim.TotalAmount.ToString("C")</td>
                            <td class="text-center">
                                <span class="badge @ClaimStatusHelper.GetStatusBadgeClass(claim.Status)">
                                    @claim.Status.ToString()
                                </span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@claim.ClaimId" class="btn btn-sm btn-outline-primary">
                                    @(claim.Status == ClaimStatus.Draft ? "Edit & Submit" : "View Details")
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

