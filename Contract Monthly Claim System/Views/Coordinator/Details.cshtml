@model Contract_Monthly_Claim_System.Models.Claim

@{
    ViewData["Title"] = "Review Claim Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-0">Review Claim: @ViewBag.LecturerName</h2>
            <p class="text-muted">Claim for @Model.Month/@Model.Year</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Claim Details</h5>
        </div>
        <div class="card-body">
            <!-- Claim Items -->
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr><th>Date</th><th>Hours</th><th>Rate</th><th>Amount</th><th>Description</th></tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Date.ToShortDateString()</td>
                            <td>@item.Hours</td>
                            <td>@item.HourlyRate.ToString("C")</td>
                            <td>@item.Amount.ToString("C")</td>
                            <td>@item.ActivityDescription</td>
                        </tr>
                    }
                </tbody>
                <tfoot class="font-weight-bold bg-light">
                    <tr>
                        <td colspan="3" class="text-right">Total:</td>
                        <td>@Model.TotalAmount.ToString("C")</td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="card-footer" id="decision-section">
            <h5 class="mb-3">Take Action</h5>
            <div class="row">
                <!-- Approve Form -->
                <div class="col-md-6">
                    <form asp-action="Approve" method="post">
                        <input type="hidden" name="id" value="@Model.ClaimId" />
                        <div class="form-group">
                            <label for="approve-comments">Approval Comments (Optional)</label>
                            <textarea id="approve-comments" name="comments" class="form-control" rows="2"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success btn-block">
                            <i class="fas fa-check-circle"></i> Approve
                        </button>
                    </form>
                </div>
                <!-- Reject Form -->
                <div class="col-md-6">
                    <form asp-action="Reject" method="post">
                        <input type="hidden" name="id" value="@Model.ClaimId" />
                        <div class="form-group">
                            <label for="reject-comments">Rejection Reason (Required)</label>
                            <textarea id="reject-comments" name="comments" class="form-control" rows="2" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-danger btn-block">
                            <i class="fas fa-times-circle"></i> Reject
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

