@model Contract_Monthly_Claim_System.Models.Claim

@{
    ViewData["Title"] = "Review Claim Details";
}

<div class="container mt-4">
    <!-- ... Header and Claim Items Table ... -->
    <div class="card">
        <div class="card-header">
            <h5>Claim Details</h5>
        </div>
        <div class="card-body">
            <!-- ... Claim Items Table ... -->
            <!-- NEW: Display Uploaded Documents -->
            <h5 class="mt-4">Supporting Documents</h5>
            @if (Model.Documents.Any())
            {
                <ul class="list-group">
                    @foreach (var doc in Model.Documents)
                    {
                        <li class="list-group-item">
                            <a href="@doc.FileUrl" target="_blank">
                                <i class="fas fa-download mr-2"></i>@doc.FileName
                            </a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">No supporting documents were submitted with this claim.</p>
            }
        </div>
        <div class="card-footer" id="decision-section">
            <!-- ... Approval/Rejection Forms ... -->
        </div>
    </div>
</div>

