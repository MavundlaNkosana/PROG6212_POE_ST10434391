@model IEnumerable<Contract_Monthly_Claim_System.Models.Claim>
@{
    ViewData["Title"] = "Coordinator Dashboard";
    var lecturers = ViewBag.Lecturers as System.Collections.Concurrent.ConcurrentDictionary<Guid, Lecturer>;
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h2 class="mb-0">Pending Claims for Review</h2>
        </div>
        <div class="card-body">
            <p>The following claims have been submitted and are awaiting your verification.</p>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>Lecturer</th>
                            <th>Claim Period</th>
                            <th>Submitted On</th>
                            <th class="text-right">Total Amount</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>@(lecturers.TryGetValue(claim.LecturerId, out var lecturer) ? lecturer.FullName : "N/A")</td>
                                    <td>@claim.Month/@claim.Year</td>
                                    <td>@claim.SubmittedAt?.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td class="text-right font-weight-bold">@claim.TotalAmount.ToString("C")</td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@claim.ClaimId" class="btn btn-primary btn-sm">
                                            Review Claim
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4">There are no pending claims at this time.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

