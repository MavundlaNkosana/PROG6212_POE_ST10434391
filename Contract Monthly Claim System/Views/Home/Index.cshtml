@{
    ViewData["Title"] = "Welcome";
}

<div class="home-container">
    <div class="text-center">
        <h1 class="display-4">Welcome to the Claims Portal</h1>
        <p class="lead text-muted">Please select your role to continue.</p>
        <hr class="my-4">
        <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
            <a asp-controller="Claims" asp-action="Index" class="btn btn-primary btn-lg px-4 gap-3">
                <i class="fas fa-user-edit mr-2"></i>My Claims (Lecturer)
            </a>
            <a asp-controller="Coordinator" asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                <i class="fas fa-user-shield mr-2"></i>Coordinator Dashboard
            </a>
        </div>
    </div>
</div>
